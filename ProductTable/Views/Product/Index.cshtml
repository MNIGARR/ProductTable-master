@model ProductViewModel

<!DOCTYPE html>

<html>

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <h1 style="margin-left:42%; color:darkblue">There are @Model.Products.Count() products</h1>
    <a asp-action="Add" asp-controller="Product">
        <button style="width:200px; background:grey; height:80px; display:block; margin:auto; margin-top:30px; font-size:22px" class="btn btn-primary" type="button">Add</button>
    </a>
    @foreach (var item in Model.Products)
    {
        <div class="container bg-primary" style="margin:15px; margin-left:50px; margin-top:50px; border-radius:15px; width:800px; display:inline-block; ">
            <img src="@item.ImagePath" style="width:400px; height:400px; display:inline-block;margin: 5%; margin-left:60px" />
            <div style="display:inline-block; margin-top:20px; margin-left:20px;">
                <h1>Name : @item.Name</h1>
                <h1>Discount : <b> @item.Discount </b></h1>
                <h1>Price : <b> @item.Price </b></h1>
            </div>
            <div style="display:inline-block;">
                <a asp-action="Update" asp-controller="Product" asp-route-myid="@item.Id">
                    <button style="width:110px; height:60px; margin:20px; margin-bottom:40px; background:grey;  font-size:22px" class="btn btn-primary" type="button">Update</button>
                </a>
            </div>
        </div>
    }
</body>
</html>